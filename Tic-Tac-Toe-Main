# Import the needed libraries. 
from random import *

# Function for users choosing what their symbol will be.
def user_symbol(players):

    # Instructions for choosing user character.
    print("Here you'll choose what symbol you'll be using, for the default\n"
            "simply hit enter.")

    # Asking the user for what their mark will be.
    players = []
    player_1 = input("Player 1, what will be your character (Default is 'X')? ")
    player_2 = input("Player 2, what will be your character (Default is 'O')? ")
    players.append(player_1)
    players.append(player_2)

    # Default choice for the user.
    if not players:
        players = ['X', 'O']

    return players

# Defining the board.
def board(board):
    print(f"{board[0]} | {board[1]} | {board[2]}")
    print("-+-+-+-+-")
    print(f"{board[3]} | {board[4]} | {board[5]}")
    print("-+-+-+-+-")
    print(f"{board[6]} | {board[7]} | {board[8]}")

